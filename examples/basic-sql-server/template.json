{
    "template": [
        {
            "type": "vm",
            "role": "vm",
            "count": 1,
            "provisioners": [
                "remoting",
                "mixed-auth",
                "sql-ports"
            ],
            "usePublicIP": true,
            "os": {
                "size": "Standard_DS1_v2",
                "type": "Windows",
                "publisher": "MicrosoftSQLServer",
                "offer": "SQL2016SP1-WS2016",
                "skus": "Standard"
            },
            "firewall": {
                "inbound": [
                    {
                        "name": "SQL",
                        "priority": 101,
                        "source": "*:*",
                        "destination": "@{subnet}:1433-1434",
                        "access": "Allow"
                    }
                ]
            }
        }
    ],
    "provisioners": {
        "remoting": "dsc: @{remoting}",
        "mixed-auth": "custom: @{sql-mixed-auth}",
        "sql-ports": "custom: @{sql-firewall-ports}"
    },
    "firewall": {
        "inbound": [
            {
                "name": "RDP",
                "priority": 4095,
                "source": "*:*",
                "destination": "@{subnet}:3389",
                "access": "Allow"
            }
        ]
    }
}