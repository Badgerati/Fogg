{
    "template": [
        {
            "type": "vm",
            "role": "sql",
            "provisioners": [
                "remoting",
                "mixed-auth",
                "sql-ports"
            ],
            "publicIp": "dynamic",
            "os": {
                "size": "Standard_DS1_v2",
                "type": "Windows",
                "publisher": "MicrosoftSQLServer",
                "offer": "SQL2016SP1-WS2016",
                "skus": "Standard"
            },
            "firewall": {
                "sql": true
            }
        }
    ],
    "provisioners": {
        "remoting": "dsc: @{remoting}",
        "mixed-auth": "custom: @{sql-mixed-auth}",
        "sql-ports": "custom: @{sql-firewall-ports}"
    },
    "firewall": {
        "rdp": true
    }
}