{
    "platform": "platform",
    "template": [
        {
            "role": "vm",
            "type": "vm",
            "count": 1,
            "provisioners": [
                "remoting"
            ],
            "usePublicIP": true,
            "os": {
                "size": "Standard_DS1_v2",
                "type": "Windows",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "skus": "2016-Datacenter"
            }
        }
    ],
    "provisioners": {
        "remoting": "dsc: @{remoting}"
    },
    "firewall": {
        "inbound": [
            {
                "name": "RDP",
                "priority": 4095,
                "source": "*:*",
                "destination": "@{subnet}:3389",
                "access": "Allow"
            }
        ]
    }
}