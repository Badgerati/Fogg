{
    "template": [
        {
            "role": "web",
            "type": "vm",
            "count": 1,
            "provisioners": [
                "remoting",
                "web"
            ],
            "usePublicIP": true,
            "os": {
                "size": "Standard_DS1_v2",
                "type": "Windows",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "skus": "2016-Datacenter"
            },
            "firewall": {
                "inbound": [
                    {
                        "name": "HTTP",
                        "priority": 101,
                        "source": "*:*",
                        "destination": "@{subnet}:80",
                        "access": "Allow"
                    }
                ]
            }
        }
    ],
    "provisioners": {
        "remoting": "dsc: .\\Remoting.ps1",
        "web": "dsc: .\\WebServer.ps1"
    },
    "firewall": {
        "inbound": [
            {
                "name": "RDP",
                "priority": 4095,
                "source": "@{subnet|jump}:*",
                "destination": "@{subnet}:3389",
                "access": "Allow"
            }
        ]
    }
}