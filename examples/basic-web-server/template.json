{
    "template": [
        {
            "type": "vm",
            "role": "web",
            "provisioners": [
                "remoting",
                "web",
                "logs"
            ],
            "publicIp": "dynamic",
            "subnet": "web",
            "os": {
                "size": "Standard_DS1_v2",
                "type": "Windows",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "skus": "2016-Datacenter"
            },
            "firewall": {
                "http|both": true
            }
        }
    ],
    "provisioners": {
        "remoting": "dsc: .\\Remoting.ps1",
        "web": "dsc: @{web-server}",
        "logs": "custom: .\\Directories.ps1"
    },
    "firewall": {
        "rdp": true
    }
}